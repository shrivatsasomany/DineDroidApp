<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/android_bg_blur" />

    <LinearLayout
        android:id="@+id/fragment_table_detail_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_table_detail_tableInfo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="10dp"
            android:text="Table: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/fragment_table_detail_waiterInfo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="10dp"
            android:text="Waiter: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/fragment_table_detail_orderStatus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="10dp"
            android:text="Status: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_table_detail_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/fragment_table_detail_layout_1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_table_detail_tableNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/fragment_table_detail_waiterName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/fragment_table_detail_numStatus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="10dp"
            android:text="mystatus"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="35sp" />
    </LinearLayout>

</RelativeLayout>