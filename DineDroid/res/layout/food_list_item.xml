<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >

    <com.main.dinedroid.customclasses.ScrollingTextView
        android:id="@+id/food_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="28"
        android:gravity="center"
        android:text="ScrollingTextView" />

    <ImageView
        android:id="@+id/food_list_item_separator"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="96"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/food_list_separator" />

    <TextView
        android:id="@+id/food_list_item_price"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="70"
        android:gravity="center"
        android:text="TextView" />

</LinearLayout>